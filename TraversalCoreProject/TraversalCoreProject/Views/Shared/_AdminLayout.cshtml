@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="~/sneat/assets/"
      data-template="vertical-menu-template-free">

<!-- Header -->
@await Html.PartialAsync("/Views/Admin/HeaderPartial.cshtml");

<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

                <!-- AppBrandDemo -->
                @await Html.PartialAsync("/Views/Admin/AppBrandDemoPartial.cshtml");

                <div class="menu-inner-shadow"></div>

                <!-- SideBar -->
                @await Html.PartialAsync("/Views/Admin/SideBarPartial.cshtml");

            </aside>
            <div class="layout-page">

                <!-- Navbar -->
                @await Html.PartialAsync("/Views/Admin/NavBarPartial.cshtml");

                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        @RenderBody()
                    </div>

                    <!-- Footer -->
                    @await Html.PartialAsync("/Views/Admin/FooterPartial.cshtml");

                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    <!-- Core JS -->
    @await Html.PartialAsync("/Views/Admin/ScriptPartial.cshtml");

</body>
</html>
