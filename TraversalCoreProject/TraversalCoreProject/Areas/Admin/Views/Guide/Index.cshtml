@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rehber listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        {count += 1;}
        <tr>
            <td>@count</td>
            <td><img src="@item.Image" style="width:100px; border-radius:15px;" /> </td>
            <td>@item.Name</td>
            <td>@item.Description</td>

            @if (item.Status)
            {
                <td><a href="#" class="btn btn-outline-warning">Pasif Yap</a></td>
            }
            else
            {
                <td><a href="#" class="btn btn-outline-info">Aktif Yap</a></td>
            }

            <td><a href="#" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Ekle</a>